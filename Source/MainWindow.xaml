<Window x:Class="Source.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Source"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <local:TextBoxPlaceHolderUC TextChanged="TextBoxPlaceHolderUC_TextChanged" AcceptsReturn="True" PlaceHolder="Username"  Text="MyUsername"></local:TextBoxPlaceHolderUC>
        <local:TextBoxPlaceHolderUC AcceptsReturn="False"  PlaceHolder="Password"></local:TextBoxPlaceHolderUC>
    </StackPanel>
</Window>
